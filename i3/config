# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r exec i3-msg restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "pkill lemonbar; i3-msg exit"

# resize window (you can also use the mouse for that)
mode "resize" {
  # These bindings trigger as soon as you enter the resize mode
	bindsym h resize shrink width  5 px or 5 ppt
	bindsym k resize shrink height 5 px or 5 ppt
	bindsym j resize grow   height 5 px or 5 ppt
	bindsym l resize grow   width  5 px or 5 ppt

	bindsym Shift+h resize shrink width  1 px or 1 ppt
	bindsym Shift+k resize shrink height 1 px or 1 ppt
	bindsym Shift+j resize grow   height 1 px or 1 ppt
	bindsym Shift+l resize grow   width  1 px or 1 ppt

  # same bindings, but for the arrow keys
	bindsym Left  resize shrink width  5 px or 5 ppt
	bindsym Up    resize shrink height 5 px or 5 ppt
	bindsym Down  resize grow   height 5 px or 5 ppt
	bindsym Right resize grow   width  5 px or 5 ppt

	bindsym Shift+Left  resize shrink width  1 px or 1 ppt
	bindsym Shift+Up    resize shrink height 1 px or 1 ppt
	bindsym Shift+Down  resize grow   height 1 px or 1 ppt
	bindsym Shift+Right resize grow   width  1 px or 1 ppt

  # back to normal: Enter or Escape
	bindsym Return mode "default"
	bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# Launch polybar
exec_always --no-startup-id $HOME/.config/polybar/launch.sh

# Start picom
exec --no-startup-id bash -c "hash picom && picom -b"

# Start dunst notification manager
exec --no-startup-id bash -c "hash dunst && dunst &"

# Handle monitors with autorandr
exec --no-startup-id autorandr --change

# Switch between bars with Super+B
bindsym $mod+B exec bash -c "setxkbmap -query | grep -q us && setxkbmap es || setxkbmap us"

# Install xorg-xev to find xf86 bindings for your keyboard
bindsym $alt+F4 kill

set $sink "$(pactl list short sinks | grep RUNNING | head -1 | awk '{print $1}')"
bindsym XF86AudioRaiseVolume       exec --no-startup-id pactl set-sink-volume $sink +5%
bindsym XF86AudioLowerVolume       exec --no-startup-id pactl set-sink-volume $sink -5%
bindsym Shift+XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume $sink +1%
bindsym Shift+XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume $sink -1%
bindsym XF86AudioMute              exec --no-startup-id pactl set-sink-mute   $sink toggle

# My laptop's function keys are weird, man
bindsym XF86WWW exec touchpad_toggle
bindsym XF86Mail exec playerctl play

# Save scripts/touchpad_toggle.sh to your path
bindsym XF86TouchpadToggle exec $scripts/touchpad_toggle.sh
bindsym $mod+F9 exec $scripts/touchpad_toggle.sh

# Media player controls
bindsym XF86AudioPlay  exec $scripts/music_control.sh play
bindsym XF86AudioPause exec $scripts/music_control.sh pause
bindsym XF86AudioNext  exec $scripts/music_control.sh next
bindsym XF86AudioPrev  exec $scripts/music_control.sh previous
bindsym XF86AudioStop  exec $scripts/music_control.sh stop
bindsym Shift+XF86AudioStop exec $scripts/music_control.sh quit
bindsym Shift+XF86AudioNext exec $scripts/music_control.sh seek +5
bindsym Shift+XF86AudioPrev exec $scripts/music_control.sh seek -5
bindsym Control+XF86AudioPlay exec $scripts/music_control.sh stop
bindsym Control+XF86AudioStop exec $scripts/music_control.sh quit
bindsym Control+XF86AudioNext exec $scripts/music_control.sh seek +15
bindsym Control+XF86AudioPrev exec $scripts/music_control.sh seek -15
bindsym Control+Shift+XF86AudioNext exec $scripts/music_control.sh seek +60
bindsym Control+Shift+XF86AudioPrev exec $scripts/music_control.sh seek -60

# My laptop screen doesn't play well with xbacklight, so I wrote
# this script to control the brightness. It still needs root access
# so make sure to add a NOPASSWD rule in sudoers if you want i3 to run it
bindsym XF86MonBrightnessUp exec sudo $scripts/backlight.sh +10%
bindsym XF86MonBrightnessDown exec sudo $scripts/backlight.sh -10%
bindsym $mod+F5 exec sudo $scripts/backlight -8%
bindsym $mod+F6 exec sudo $scripts/backlight +8%

# Lock the screen with Super+O
bindsym $mod+O exec i3lock-fancy

# Launch firefox
bindsym $mod+N exec firefox
bindsym $mod+M exec chromium
bindsym $mod+Shift+N exec firefox --private-window
bindsym $mod+Shift+M exec chromium --incognito

